.main {
  width: 100%;
  height: 100%;
  background: #eee;
  display: flex;
  flex-direction: column;
}

.list {
  position: relative;
  width: 100%;
  background: #fff;
  margin-top: 1px;
  color: #353535;
}

.detail {
  display: flex;
  flex-direction: column;
  width: 50%;
  height: 100%;
  margin: 20rpx 0 20rpx 20rpx;
}

.duration {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 11pt;
}

.path {
  font-size: 13pt;
  display: flex;
  flex-direction: row;
}

.path-item {
  margin: 0 25rpx 0 0;
}

.distance, .geton {
  font-size: 11pt;
  color: #888;
}

.end-site {
  font-size: 11pt;
  color: #e64340;
}
