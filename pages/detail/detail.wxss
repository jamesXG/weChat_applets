/* pages/detail/detail.wxss 地点详情页 */

.detail-main {
  width: 100%;
}

.image-main {
  width: 100%;
  height: 450rpx;
}

.location-name {
  background: #fff;
  color: #e64340;
  font-size: 17pt;
  padding: 50rpx;
  display: flex;
  justify-content: space-between;
}

.navigation-img {
  margin: auto 20rpx auto 0;
  width: 70rpx;
  height: 70rpx;
}

.detail {
  width: 100%;
  margin: auto;
  background: #f6f6f6;
}

.detail-text {
  display: block;
  width: 90%;
  margin: auto;
  font-size: 10pt;
  color: #353535;
  word-break: break-all;
  letter-spacing: 2rpx;
  line-height: 18pt;
}
