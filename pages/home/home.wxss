.main{
  position: absolute;
  width: 100%;
  height: 100%;
  background-image: url(https://myjjxy.top/map_hnlg-api/public/static/image/13.png);
  background-size: 100% 100%;
  display: flex
}
.navigate{
  display: flex;
  flex-direction: column;
  height: 50%;
  margin: 100rpx auto
}
.navigate > .item{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  color: #fff;
  font-size: 13pt;
  background: rgba(78, 127, 196, .8);
  display: flex;
  margin: 20rpx auto
}
.navigate > .item > text{
  display: block;
  margin: auto;
}