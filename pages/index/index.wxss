/**index.wxss**/
@import "../tpl/list/list.wxss";

.map-main {
  position: absolute;
  width: 100%;
  /* display: flex;
  flex-direction: column */
}
.main {
  width: 100%;
  height: 100%;
}

.map {
  width: 100%;
  height: 100%;
}

.scroll-main {
  width: 100%;
}

.scroll {
  height: 50rpx;
  font-size: 11pt;
  display: flex;
  white-space: nowrap;
  background: #4e7fc4;
  color: #fff;
  padding: 10rpx 0;
}

.scroll-item {
  width: 130rpx;
  text-align: center;
  display: inline-block;
}

.active {
  font-weight: bold;
}

.no-avtive {
  font-weight: 5rpx;
}

.map-control {
  padding: 10rpx;
  position: absolute;
  bottom: 40rpx;
  right: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
}

.map-control > image {
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}

.list-scroll {
  width: 100%;
  max-height: 420rpx;
}

.locatioin-list {
  width: 100%;
  background: #fff;
  overflow: hidden
}

.listTop {
  width: 100%;
  height: 70rpx;
  font-size: 10pt;
  display: flex;
  justify-content: center;
  color: #4e7fc4;
  border-bottom: 2rpx solid #ccc;
}

.count {
  margin: auto 0;
  padding: 10rpx;
}

.topImg {
  margin: auto 0;
  width: 50rpx;
  height: 50rpx;
}

.rotate {
  transform: rotate(180deg);
}
