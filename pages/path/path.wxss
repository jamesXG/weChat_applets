/* pages/path/path.wxss */

.main {
  position: absolute;
  width: 100%;
  height: 100%;
}

.path-nav {
  width: 100%;
  height: 7%;
  display: flex;
  justify-content: space-around;
  border-bottom: 4rpx solid #ccc;
}

.nav-item {
  margin: auto;
  padding: 0 66rpx
}

.item-img {
  width: 50rpx;
  height: 50rpx
}

.map-main {
  width: 100%;
  height: 80%
}

.map {
  width: 100%;
  height: 100%
}

.path-detail-swiper {
  width: 100%;
  height: 12%
}
.swiper-item{
  position: relative;
  height: 100%;
}
.path-detail {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: space-between
}

.detail-content {
  margin: 25rpx;
  font-size: 13pt;
  display: flex;
  flex-direction: column;
  color: #353535
}

.time {
  font-weight: bold
}

.distance {
  margin-top: 15rpx
}

.button {
  width: 100rpx;
  height: 70rpx;
  background: #0090ff;
  color: #fff;
  font-size: 11pt;
  border-radius: 10rpx;
  display: flex;
  margin: 40rpx
}

.button>text {
  margin: auto
}

.button-click {
  background: rgba(0, 144, 255, 0.6)
}