.search-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.list-item {
  margin: 20rpx 0;
  display: flex;
  justify-content: space-around;
}
.list-item-active{
  /* background: #eee; */
  color: #4E7FC4
}
.list-item-main {
  width: 80%;
  display: flex;
  justify-content: space-between;
}

.item-img {
  width: 230rpx;
  height: 130rpx;
  margin: 0 10rpx;
  border-radius: 8rpx
}

.item-name {
  width: 60%;
  margin: auto 10rpx;
  font-size: 13pt;
  color: #353535;
}

.navigation-img {
  margin: auto 20rpx auto 0;
  width: 70rpx;
  height: 70rpx;
}
